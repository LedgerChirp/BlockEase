{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"pages/graph.jsx",
		"components/Charts/CoinInfo.jsx",
		"components/Web3/WalletCard.tsx",
		"components/Web3/ConnectWallet.jsx",
		"public/1.ts",
		"components/Home/TransferMoney.jsx",
		"components/Home/Convertion.jsx"
	],
	"exclude": ["node_modules"]
}
